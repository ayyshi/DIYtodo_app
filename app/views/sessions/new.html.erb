<h1>Welcome to DIY ToDo</h1>

<div>
  <%= form_tag '/login' do %>
    <p>
      <%= text_field_tag :username, "username" %><br>
      <%= password_field_tag :password, "password" %><br>
      <%= submit_tag "Login" %>
    </p>
  <% end %>

  <p>
    <%= link_to "Sign Up", new_user_path %>
  </p>
</div>
