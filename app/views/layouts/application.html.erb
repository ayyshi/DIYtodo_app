<!DOCTYPE html>
<html>
<head>
  <title>DIY ToDo Lists</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="sidebar">
  <% if current_user %>
    <div>
      <p>
      Signed in as <%= current_user.username.upcase %></p>
      <p>
      <%= link_to "Edit Account", edit_user_path(current_user) %> |
      <%= link_to "Logout", logout_path %></p>
      <p>
      <%= link_to "Home", users_path %></p>
      <p>
      <%= link_to "View All Lists", categories_path %></p>
      <p>
      <%= link_to "Your Lists", user_path(current_user) %></p>
      <p>
      <%= link_to "Create New Post", new_post_path %></p>
      <p>
      <%= link_to "Create New Category", new_category_path %></p>
    </div>
  <% else %>
    <div>
      Welcome, please login
    </div>
  <% end %>
  </div>

  <div id="main">
    <%= yield %>
  </div>
</body>
</html>
