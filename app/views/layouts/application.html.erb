<!DOCTYPE html>
<html>
<head>
  <title>Crafter's To-Do List</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="sidebar">
  <% if current_user %>
    <div>
      <p>
      Signed in as<br><%= current_user.username.upcase %><br>
     <img src="<%= current_user.avatar_url%>"></img></p>
      <p>
      <%= link_to "Home", categories_path %> |
      <%= link_to "Logout", logout_path %></p>
      <p>
        <%= link_to "Edit Account", edit_user_path(current_user) %>
      </p>
      <hr>
      <p>
      <%= link_to "View Other User's Lists", users_path %></p>
      <p>
      <%= link_to "Your Lists", user_path(current_user) %></p>
      <p>
      <%= link_to "Create New Post", new_post_path %></p>
      <p>
      <%= link_to "Create New Category", new_category_path %></p>
    </div>
  <% else %>
    <div>
      <h3>Please Login</h3>
    </div>
  <% end %>
  </div>

  <div id="main">
    <%= yield %>
  </div>
</body>
</html>
