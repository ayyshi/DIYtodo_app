<!DOCTYPE html>
<html>
<head>
  <title>DIY ToDo Lists</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
    <div>
      Signed in as <%= current_user.username.upcase %> | <%= link_to "Logout", logout_path %>
    </div>
    <div>
      <%= link_to "Home", users_path %> |
      <%= link_to "Edit Account", edit_user_path(current_user) %> |
      <%= link_to "Your Lists", user_path(current_user) %> |
      <%= link_to "Create New Post", new_post_path %> |
      <%= link_to "Create New Category", new_category_path %>
    </div>
  <% else %>
    <div>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
