<%= form_for @category do |f| %>

  <% if @category.errors.any? %>
    <div id="error_message">
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    category name<br><%= f.text_field :status %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>

<% end %>
