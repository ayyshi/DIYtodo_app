<div class="form">
<%= form_for @category do |f| %>

  <% if @category.errors.any? %>
    <div id="error_message">
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <p>
      category name<br><%= f.text_field :name %>
    </p>
    <p>
      <%= f.submit "Submit" %>
    </p>
  </div>
<% end %>
</div>
