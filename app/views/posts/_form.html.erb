<div class="form">
<%= form_for @post do |f| %>

  <% if @post.errors.any? %>
    <div id="error_message">
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <p>
      title<br><%= f.text_field :title %>
    </p>
    <p>
      description<br><%= f.text_area :description %>
    </p>
    <p>
      photo url<br><%= f.text_field :photo_url %>
    </p>
    <p>
      goal date<br><%= f.date_field :goal_date %>
    </p>
    <p>
      completed date<br><%= f.date_field :completed_date %>
    </p>
    <p>
      category<br>
      <%= f.select :category_id, options_from_collection_for_select(@categories, 'id', 'name') %>
    </p>
    <p>
      <%= f.submit "Submit" %>
    </p>
  </div>

<% end %>
</div>
