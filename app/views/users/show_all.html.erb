<h1>Each Lists</h1>

<% @user.categories.each do |category| %>
  <h2><%= category.status %></h2>
  <ul>
    <li>
      <% category.posts.each do |post| %>
        <h3><%= post.title %></h3>
        <p><%= post.description %></p>
        <p><%= post.goal_date %> | <%= post.completed_date %></p>(
        <p><%= link_to "edit", edit_post_path(post)%> |
        <%= link_to "delete", post_path(post), method: :delete %></p>
      <% end %>
    </li>
  </ul>
<% end %>
